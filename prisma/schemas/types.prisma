type StripeInfo {
    accountId String
    bankAccount BankAccount?
}

type BankAccount {
    id String
    fingerprint String
    account_holder_name String
    account_number String
    sort_code String
    currency String
    status String
}

type Address {
    line1 String
    line2 String?
    city String
    postcode String
    region String
    country String @default("GB")
}

type BusinessInfo {
    legal_name String
    weekly_fuel_spend Int
    average_monthly_revenue Int
    business_type String
    business_crn String
    merchant_category_code String
    business_url String
    num_vehicles Int
}

type CardInfo {
    card_business_name String
    num_cards Int
    shipping_speed ShippingSpeed
}

type SpendingLimit {
    amount Int
    interval SpendingLimitInterval
}

type MerchantData {
    category String
    category_code String
    city String
    country String
    name String
    postcode String
    network_id String
    region String
}